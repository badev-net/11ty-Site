---
layout: layouts/base.njk
---

<article class="resume">
    <header class="resume-header">
        <h1>{{ name }}</h1>
        <div class="contact-info">
            <p>{{ email }} | {{ phone }} | {{ location }}</p>
            {% if linkedin %}<p>LinkedIn: {{ linkedin }}</p>{% endif %}
            {% if github %}<p>GitHub: {{ github }}</p>{% endif %}
            {% if website %}<p>Website: {{ website }}</p>{% endif %}
        </div>
    </header>

    {% if summary %}
    <section class="resume-section">
        <h2>Professional Summary</h2>
        <p>{{ summary }}</p>
    </section>
    {% endif %}

    {% if skills %}
    <section class="resume-section">
        <h2>Skills</h2>
        <div class="skills-list">
            {% for category in skills %}
            <div class="skill-category">
                <h3>{{ category.name }}</h3>
                <p>{{ category.items | join(", ") }}</p>
            </div>
            {% endfor %}
        </div>
    </section>
    {% endif %}

    {% if experience %}
    <section class="resume-section">
        <h2>Professional Experience</h2>
        {% for job in experience %}
        <article class="job">
            <h3>{{ job.title }}</h3>
            <p class="company">{{ job.company }} | {{ job.location }}</p>
            <p class="dates">{{ job.startDate }} - {{ job.endDate or "Present" }}</p>
            <ul class="responsibilities">
                {% for item in job.responsibilities %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>
        </article>
        {% endfor %}
    </section>
    {% endif %}

    {% if education %}
    <section class="resume-section">
        <h2>Education</h2>
        {% for edu in education %}
        <article class="education-item">
            <h3>{{ edu.degree }}</h3>
            <p>{{ edu.institution }} | {{ edu.location }}</p>
            <p class="dates">{{ edu.graduationDate }}</p>
            {% if edu.gpa %}<p>GPA: {{ edu.gpa }}</p>{% endif %}
        </article>
        {% endfor %}
    </section>
    {% endif %}

    {% if certifications %}
    <section class="resume-section">
        <h2>Certifications</h2>
        <ul>
            {% for cert in certifications %}
            <li>{{ cert.name }} - {{ cert.issuer }} ({{ cert.date }})</li>
            {% endfor %}
        </ul>
    </section>
    {% endif %}
</article>