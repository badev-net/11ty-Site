---
layout: layouts/base.njk
bodyClass: blog-post-page
---

<article class="blog-post-single">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <p class="post-meta">
            <time datetime="{{ date }}">
                {{ date | postDate }}
            </time>
            {% if tags %}
                | Tags: 
                {% for tag in tags %}
                    {% if tag != "post" %}
                        <span class="tag">{{ tag }}</span>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </p>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <a href="/blog/" class="back-link">‚Üê Back to all posts</a>
</article>